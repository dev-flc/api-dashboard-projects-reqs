{
  "name": "backend-blog",
  "version": "1.0.0",
  "description": "backend blog",
  "main": "api/index.js",
  "type": "module",
  "files": [
    "api"
  ],
  "engines": {
    "node": ">=14.x <16.x",
    "npm": "6.x.x"
  },
  "scripts": {
    "lint": "eslint . --cache --fix",
    "clean": "rm -rf ./api",
    "prettier": "prettier . --write",
    "prepare": "husky install",
    "dev": "nodemon src/index.js",
    "build": "npm run clean && babel src --out-dir api --copy-files ",
    "start": "node api/index.js",
    "logs": "heroku logs --tail --app flc-backend-blog"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ferch01992/backend-blog.git"
  },
  "keywords": [
    "Node JS",
    "Express",
    "Mongo"
  ],
  "author": "Ferch01992",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ferch01992/backend-blog/issues"
  },
  "homepage": "https://github.com/ferch01992/backend-blog#readme",
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.19.3",
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "babel-preset-minify": "0.5.2",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.3.0",
    "eslint-plugin-promise": "6.0.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "nodemon": "2.0.20",
    "prettier": "2.7.1"
  },
  "dependencies": {
    "bcrypt": "5.1.0",
    "dotenv": "16.0.3",
    "express": "4.18.1",
    "jwt-redis": "7.0.3",
    "mongoose": "6.6.5",
    "nodemailer": "6.8.0",
    "redis": "4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json}": [
      "eslint . --cache --fix",
      "prettier --write"
    ]
  }
}
